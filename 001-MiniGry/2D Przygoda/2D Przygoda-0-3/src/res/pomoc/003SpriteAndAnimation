// Sprite and Animation

// packed entity

public class Entity {

public int x, y;
public int speed;

public BufferedImage up1, up2, down1, down2, left1, left2, right1, right2;
public String direction;
public int spirteCounter = 0;
public int spriteNum = 0;

}

public class Player extends Entity {

private GamePanel gp;
private KeyHandler keyH;

public Player(GamePanel gp,KeyHandler keyH) {
this.gp = gp;
this.keyH = keyH;

setDefaaultValues();
}

public void setDefaaultValues(){

	x = 100;
	y = 100;
	speed = 4;
	}
	
	public void getPlayerImage(){
	try {
	up1 = ImaageIO.read(getClass().getResourceAsStream("/player/boy_up_1.png"));
	up2 = ImaageIO.read(getClass().getResourceAsStream("/player/boy_up_2.png"));
	down1 = ImaageIO.read(getClass().getResourceAsStream("/player/boy_down_1.png"));
	down2 = ImaageIO.read(getClass().getResourceAsStream("/player/boy_down_2.png"));
	left1 = ImaageIO.read(getClass().getResourceAsStream("/player/boy_left_1.png"));
	left2 = ImaageIO.read(getClass().getResourceAsStream("/player/boy_left_12.png"));
	right1 = ImaageIO.read(getClass().getResourceAsStream("/player/boy_right_1.png"));
	right2 = ImaageIO.read(getClass().getResourceAsStream("/player/boy_right_2.png"));
	
	
	} catch (IOException e) {
	e.printStackTrace;
	}
	}
	
public void update(){
// wszystko wlozyc tu
if (keyH.upPressesd == true || keyH.downPreessed == true 
|| keyH.leftPressed == true || keyH.rightPressed == true) {

// przeniesc update z gamePabnelu
direction = "up";
direction = "down"; // itd 2 wiecej

// zamienic player na x , y oraz playerSpeed na speed

spirteCounter++;
if(spirteCounter > 12){
	if(spirteNum == 1){
		spriteNum = 2;
	}
	else if(spriteNum == 2){
		spriteNum = 1;
	}
	spirteCounter = 0;

}

} 


}

public void draw(Graphics2D g2){
// przeniesc z draw game panel g2.set color i g2.fillRect;
// tak samo w zamienic player na x i y  odwolac sie do gp w  wielkosciach tileSize i zrobic publiczne 
// zachaszowac

	BufferedImage imdirection = "up";age =  null;
	
	swicth(direction){
	case "up":
		if(spirteNum == 1){ 
		image =  up1;
		}
		if(spirteNum == 2){ 
		image =  up2;
		}
		break;
	case "down":
	if(spirteNum == 1){ 
		image =  down1;
		}
		if(spirteNum == 2){ 
		image =  down2;
		}
		break;
	case "left":
	if(spirteNum == 1){ 
		image =  left1;
		}
		if(spirteNum == 2){ 
		image =  left2;
		}
		image = left1;
		break;
	case "right":
	if(spirteNum == 1){ 
		image =  right1;
		}
		if(spirteNum == 2){ 
		image =  right2;
		}
		break;
	}
	g2.drawImage(image, x, y, gp.tileSize, gp.tileSize, null);

}

}


// GamePanel 
public class GamePanel {
private Player player =  new Player(this, keyH);

public void update(){
player.update();
}


public void draw(){
player.draw(g2);

}


}


